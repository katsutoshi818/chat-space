%div.sidebar
  %div.sidebar-top
    %div.sidebar-top-left
      %p 
        = current_user.name
    %div.sidebar-top-right
      = link_to new_group_path do
        %i.fa.fa-pencil-square-o.sidebar-top-right__awesome
      = link_to edit_user_path(current_user) do
        %i.fa.fa-cog.sidebar-top-right__awesome
  %div.sidebar-bottom
    = render "group", group: @groups